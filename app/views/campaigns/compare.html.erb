<h1>Compared Campaigns with Ads Services</h1>

<table>
  <thead>
    <tr>
      <th>Job</th>
      <th>Status</th>
      <th>AdService Status</th>
      <th>External reference</th>
      <th>Ad description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.job.title %></td>
        <td><%= campaign.status %></td>
        <td><%= campaign.ad_service_status %></td>
        <td><%= campaign.external_reference %></td>
        <td><%= campaign.ad_description %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

